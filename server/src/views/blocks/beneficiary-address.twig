{% if person['company'] is not empty %}
    <strong>{{ person['company']['legal_name'] }}</strong><br>
{% endif %}

{% if person['full_name'] != '-- --' %}
    {{ person['full_name'] }}<br>
{% endif %}

{% if person['company']['street'] is not empty and person['company']['postal_code'] is not empty and person['company']['locality'] is not empty%}
    {{ person['company']['street'] }}<br>
    {{ person['company']['postal_code'] }} {{ person['company']['locality'] }}<br>
{% else %}
    {% if person['street'] is not empty %}
        {{ person['street'] }}<br>
    {% endif %}
    {% if person['postal_code'] is not empty and person['locality'] is not empty %}
        {{ person['postal_code'] }} {{ person['locality'] }}<br>
    {% endif %}
{% endif %}

{% if person['reference'] is not empty %}
    <small>({{ translate('beneficiaryReference', [person['reference']]) }})</small><br>
{% endif %}

{% if person['company']['phone'] is not empty %}
    <small>{{ translate('phone', [person['company']['phone']]) }}</small><br>
{% elseif person['phone'] is not empty %}
    <small>{{ translate('phone', [person['phone']]) }}</small><br>
{% endif %}

{% if person['email'] is not empty %}
    <small>{{ translate('email', [person['email']]) }}</small><br>
{% endif %}
