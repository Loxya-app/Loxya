<style>
    {% if env is same as('development') -%}
    html {
        padding: 0;
    }
    body {
        margin: 0;
        background-color: #242424;
        color: #e3e3e3;
    }
    {% endif %}

    .app-loading {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100vh;
        text-align: center;
        font-size: 1.2rem;
    }
    .app-loading__logo {
        margin: 0;
        padding: 30px 0;
    }
    .app-loading__logo__svg {
        height: 200px;
    }
    .app-loading__details {
        margin: 0 0 168px 0;
        padding: 10px 0;
        background-color: #1f1f1f;
    }
    .app-loading__details__spinner {
        height: 35px;
        color: #8a8a8a;
        -webkit-animation: app-loading--spin 2s linear infinite;
        -moz-animation: app-loading--spin 2s linear infinite;
        animation: app-loading--spin 2s linear infinite;
    }
    @-moz-keyframes app-loading--spin {
        100% { -moz-transform: rotate(360deg); }
    }
    @-webkit-keyframes app-loading--spin {
        100% { -webkit-transform: rotate(360deg); }
    }
    @keyframes app-loading--spin {
        100% { -webkit-transform: rotate(360deg); transform:rotate(360deg); }
    }
</style>
<div class="app-loading">
    <div class="app-loading__logo">
        {{ include('components/logo.svg.twig', { class: 'app-loading__logo__svg' }) }}
    </div>
    <p class="app-loading__details">
        <svg class="app-loading__details__spinner" viewBox="0 0 512 512" aria-hidden="true">
