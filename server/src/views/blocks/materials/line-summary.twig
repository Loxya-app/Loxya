<tr>
    <td>{{ material['reference'] }}</td>
    <td>
        {{ material['name'] }}
        {% if material['park'] is not null %}
        <em class="lighter">({{ material['park'] }})</em>
        {% endif %}
        {% if material['attributes'] is not empty %}
        <br />
        {% for attribute in material['attributes'] %}
            {{ include('blocks/materials/attribute.twig', { attribute: attribute }) }}
        {% endfor %}
        {% endif %}
    </td>
    <td class="center">
        {{ material['quantity'] }}
    </td>
    <td class="right lighter">
        {{ material['replacementPrice']|format_currency(currency, formatCurrencyOptions, locale) }}
    </td>
    <td class="right lighter">
        {{ material['totalReplacementPrice']|format_currency(currency, formatCurrencyOptions, locale) }}
    </td>
    <td>
    </td>
</tr>
